# Managed by puppet
#
# sysconfig atop
#

# Current Day format
CURDAY=`date +%Y%m%d`
# Log files path
LOGPATH=<%= @logpath %>
# Binaries path
BINPATH=/usr/bin
# PID File
PIDFILE=/var/run/atop.pid
# interval (default 10 minutes)
INTERVAL=<%= @interval %>

# Hmm ... on EL7 it seems like the script expects LOGINTERVAL, not just INTERVAL
LOGINTERVAL=INTERVAL
